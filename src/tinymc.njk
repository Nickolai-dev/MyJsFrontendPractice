{% extends 'base.njk' %}

{% block current_path %}
  Home:index.html/Text Editor:tinymc.html
{% endblock %}

{% block body %}
  <div class="row py-3_4">
  <div class="col-lg-6">
    <div class="sheet h-100">
      <form action="#">
        <h4 class="h4 font-weight-bold">Tinymce Editor</h4>
        <textarea name="text" id="tinymce"></textarea>
      </form>
    </div>
  </div>
  </div>
  <script type="text/javascript">
  tinymce.init({
    selector: '#tinymce',
    content_css : 'writer'
  });
  </script>
{% endblock %}
