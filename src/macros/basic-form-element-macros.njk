{% macro password_input(id, placeholder=None, disabled=false) %}
<input type="password" class="basic-login-form__input" id="{{ id }}"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %}{% if disabled %} disabled=""{% endif %}>
