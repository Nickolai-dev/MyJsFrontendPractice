{% macro normal_input(id, placeholder=None, disabled=false, classes=None) %}
<input type="text" class="basic-login-form__input{% if classes %}{% if classes|isObj %}{% for cl in classes %} {{ cl }}{% endfor %}{% else %} {{ classes }}{% endif %}{% endif %}" id="{{ id }}"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %}{% if disabled %} disabled=""{% endif %}>
{% endmacro %}
{% macro support_text_input(id, placeholder=None, disabled=false) %}
<input type="text" class="basic-login-form__input" id="{{ id }}"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %}{% if disabled %} disabled=""{% endif %}>
{% endmacro %}
{% macro full_name_input(id, placeholder=None, disabled=false) %}
<input type="text" class="basic-login-form__input" id="{{ id }}" {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}{% if disabled %} disabled=""{% endif %}>
{% endmacro %}
{% macro username_input(id, placeholder=None, disabled=false) %}
<input type="text" class="basic-login-form__input" id="{{ id }}"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %}{% if disabled %} disabled=""{% endif %}>
